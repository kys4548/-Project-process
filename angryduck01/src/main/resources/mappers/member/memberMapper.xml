<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 다른 mapper와 중복되지 않도록 네임스페이스 기재 -->
<mapper namespace="member">
	<select id="id_doublecheck" resultType="String">
		select userid from member
		where userid=#{userid}
	</select>
	
	<insert id="insert">
		insert into member (userid,passwd,name,email) values 
		(#{userid},#{passwd},#{name},#{email})
	</insert>
	
	<select id="login_check" resultType="String">
		select name from member 
		where userid=#{userid} and passwd=#{passwd}
	</select>
	
	<delete id="delete">
		delete from member where userid=#{userid}
	</delete>
	
	<select id="getMemberDTO" resultType="com.ceramicduck.angryduck.model.member.dto.MemberDTO">
		select * from member 
		where userid=#{userid}
	</select>
	
	<update id="update">
		update member set name=#{name}, email=#{email} where userid=#{userid}
	</update>
	
</mapper>














